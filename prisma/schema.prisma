// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


model Post {
  id Int @id @default(autoincrement())
  title String
  location String
  skills String
  salary Int?
  company String
  description String
  tags LanguageTag[]
  jobPostDate DateTime
  jobURL String
  appStatus String
  jobType String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LanguageTag {
  id Int @id @default(autoincrement())
  name String @unique
  posts Post[]
}